<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainApp.HistoryDetailPage"
             BackgroundImage="background.png">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="{Binding packageId}"
                VerticalOptions="Start" 
                HorizontalTextAlignment="Center"
                FontSize="18" FontAttributes="Bold"
                />
            <Frame Padding="10">
                <StackLayout>
                    <Label x:Name="recipient" />
                    <Label x:Name="sender" />
                    <Label Text="{Binding timestamp, StringFormat='Time Created: {0}'}" />
                    <Label x:Name="contents"/>
                </StackLayout>
            </Frame>
            <Frame VerticalOptions="FillAndExpand" >
                <Frame  Style="{StaticResource BottomMenuFrameStyle}"  VerticalOptions="End">
                    <StackLayout Style="{StaticResource BottomMenuLayoutStyle}" VerticalOptions="End">
                        <Button Clicked="Back" Text="Back" />
                    </StackLayout>
                </Frame>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>