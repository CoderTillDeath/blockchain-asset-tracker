<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainApp.HistoryPage"
             BackgroundImage="background.png">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Frame Style="{StaticResource FrameHeadingStyle}">
                <StackLayout Orientation="Vertical">
                    <Label Style="{StaticResource HeadingStyle}" VerticalOptions="Start" FontSize = "20" HorizontalTextAlignment="Center" Text="Transaction History"/>
                </StackLayout>
            </Frame>
            <Frame>
                <StackLayout Style="{StaticResource ListLayoutStyle}" Orientation="Horizontal" Padding="5">
                    <Label Text="Package ID" HorizontalOptions="StartAndExpand" Style="{StaticResource ListLabelStyle}"/>
                    <Label Text="Date/Time" HorizontalOptions="End" HorizontalTextAlignment="Start" Style="{StaticResource ListLabelStyle}" WidthRequest="70"/>
                </StackLayout>
            </Frame>
            <ListView x:Name="listView" ItemSelected="Selected_Handler">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                            <ContentView Padding="0,2,0,2">
                                <!--<StackLayout BackgroundColor="#eee" Orientation="Vertical">-->
                                <StackLayout Style="{StaticResource ListLayoutStyle}" VerticalOptions="FillAndExpand">
                                    <Label Text="{Binding packageId}" Style="{StaticResource ListLabelStyle}"/>
                                    <Label Text="{Binding timestamp}" Style="{StaticResource ListLabelStyle}"/>
                                </StackLayout>
                                <!--</StackLayout>-->
                            </ContentView>
                        </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            <!--<Button Clicked="Back_User_page" BackgroundColor="#555" TextColor="White" Text="Back" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>