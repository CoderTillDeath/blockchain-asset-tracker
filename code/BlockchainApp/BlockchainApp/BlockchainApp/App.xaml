<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainApp.App">
	<Application.Resources>
        <!-- Application resource dictionary -->

        <ResourceDictionary>
            <Color x:Key="DarkBackground">#011627</Color>
            <Color x:Key="WhiteBackground">#FDFFC</Color>
            <Color x:Key="ButtonBackground">#E6E8E6</Color>

            <Style x:Key="MainButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#BE182D"/>
            </Style>
        </ResourceDictionary>

	</Application.Resources>
</Application>