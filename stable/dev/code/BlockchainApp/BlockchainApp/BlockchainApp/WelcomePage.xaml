<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainApp.WelcomePage"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome" VerticalOptions="Start" 
                FontSize="16" HorizontalTextAlignment="Center"/>
            <Label Text= "{Binding fullName, StringFormat= '{0}'}"
                VerticalOptions="Start" 
                FontSize="24" HorizontalTextAlignment="Center"/>

            <Button Text="Transaction History"  Clicked="TransactionButton"/>
            <Button Text="Create Asset" Clicked="CreateAsset" />
            <Button Text="Asset" Clicked="Asset"/>
            <Button Text="Logout"  Clicked="logout" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>